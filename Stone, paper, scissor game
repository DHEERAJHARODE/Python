import random
game=["rock","paper","scissors"]
user_choice=int(input("-_-_-choice-_-_-\n\nPress 0 [Rock]\nPress 1 [Paper]\nPress 2 [Scissor]\n"))
computer_choice=random.randint(0,2)
print(f"Computer choose {game[computer_choice]}")
print(f"User choose {game[user_choice]}")

if(user_choice==0 and computer_choice==2):
  print("You win")
elif(computer_choice>user_choice):
  print("You lose")
else:
  print("Draw")
